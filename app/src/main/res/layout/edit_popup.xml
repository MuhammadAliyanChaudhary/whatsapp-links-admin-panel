<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:text="Edit Group Details"
        android:textStyle="bold"
        android:textColor="@color/primary_main"
        android:layout_margin="10dp"

        />



    <EditText
        android:id="@+id/group_name_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Group Name"
        android:maxLength="17"
        android:padding="15dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_text_background_color"
        android:inputType="text"
        android:textSize="14dp"
        />
    <EditText
        android:id="@+id/group_category_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Group Category"
        android:background="@drawable/edit_text_background_color"

        android:padding="15dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:inputType="text"
        android:textSize="14dp"
        />
    <EditText
        android:id="@+id/group_link_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Group Link"
        android:background="@drawable/edit_text_background_color"
        android:inputType="text"
        android:padding="15dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:textSize="14dp"
        />
    <EditText
        android:id="@+id/group_image_link_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Group Image Link"

        android:inputType="text"
        android:padding="15dp"
        android:background="@drawable/edit_text_background_color"
        android:layout_margin="10dp"
        android:textSize="14dp"
        />


    <Button
        android:id="@+id/update_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        />

</LinearLayout>